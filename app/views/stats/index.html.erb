<p id="notice"><%= notice %></p>

<h1>Listing Stats</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>User</th>
      <th>Electricity usage</th>
      <th>Water usage</th>
      <th>Natural gas usage</th>
      <th>Month</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stats.each do |stat| %>
      <tr>
        <td><%= stat.id %></td>
        <td><%= stat.user_id %></td>
        <td><%= stat.electricity_usage %></td>
        <td><%= stat.water_usage %></td>
        <td><%= stat.natural_gas_usage %></td>
        <td><%= stat.month %></td>
        <td><%= stat.year %></td>
        <td><%= link_to 'Show', stat %></td>
        <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
        <td><%= link_to 'Destroy', stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

